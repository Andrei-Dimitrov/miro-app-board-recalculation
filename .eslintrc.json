{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "trailingComma": "all"
      }
    ],
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "miro": true
  },
  "plugins": ["prettier"]
}
